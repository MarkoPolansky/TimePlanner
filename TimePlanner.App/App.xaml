<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:TimePlanner.App.Converters"
             x:Class="TimePlanner.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/ContentPageStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/FrameStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/LabelStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:DateTimeStringConverter x:Key="DateTimeStringConverter" />
            <converters:DateStringConverter x:Key="DateStringConverter" />
            <converters:UserNameConverter x:Key="UserNameConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
